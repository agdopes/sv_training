{
    "version": 3,
    "configurePresets": [
        {
            "name": "arm-base",
            "hidden": true,
            "toolchainFile": "${sourceDir}/arm-none-eabi-toolchain.cmake",
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "stm32",
            "displayName": "STM32 Debug",
            "inherits": "arm-base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "MCU": "STM32"
            }
        },
        {
            "name": "stm32f4",
            "displayName": "STM32 F4 Series",
            "inherits": "stm32",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/arm-none-eabi-toolchain.cmake",
                "STM32_SERIES": "F4"
            }
        },
        {
            "name": "stm32g0",
            "displayName": "STM32 G0 Series",
            "inherits": "stm32",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/arm-none-eabi-toolchain.cmake",
                "STM32_SERIES": "G0"
            }
        },
        {
            "name": "stm32f411re",
            "inherits": "stm32f4",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BOARD_NAME": "nucleo_f411re"
            }
        },
        {
            "name": "stm32g0b1re",
            "inherits": "stm32g0",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BOARD_NAME": "nucleo_g0b1re"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "stm32f411re-debug",
            "configurePreset": "stm32f411re"
        },
        {
            "name": "stm32g0b1re-debug",
            "configurePreset": "stm32g0b1re"
        }
    ]
}
